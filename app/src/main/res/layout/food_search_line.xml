<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/name_food_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/cal_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cal_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/cal"
            app:layout_constraintTop_toBottomOf="@id/name_food_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cal_text"
            />

        <TextView
            android:id="@+id/cal_text"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:text="- 2158 kcal"
            android:textColor="@color/gray"
            app:layout_constraintTop_toTopOf="@+id/cal_icon"
            app:layout_constraintBottom_toBottomOf="@+id/cal_icon"
            app:layout_constraintStart_toEndOf="@+id/cal_icon"
            app:layout_constraintEnd_toStartOf="@id/fat_icon"/>

        <ImageView
            android:id="@+id/fat_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/fat"
            app:layout_constraintTop_toTopOf="@+id/cal_icon"
            app:layout_constraintBottom_toBottomOf="@+id/cal_icon"
            app:layout_constraintStart_toEndOf="@+id/cal_text"
            app:layout_constraintEnd_toStartOf="@+id/fat_text"
            />
        <TextView
            android:id="@+id/fat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 200 g"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/cal_icon"
            app:layout_constraintBottom_toBottomOf="@+id/fat_icon"
            app:layout_constraintStart_toEndOf="@+id/fat_icon"
            app:layout_constraintEnd_toStartOf="@id/protein_icon"
            />

        <ImageView
            android:id="@+id/protein_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/protein"
            app:layout_constraintTop_toTopOf="@+id/cal_icon"
            app:layout_constraintBottom_toBottomOf="@+id/cal_icon"
            app:layout_constraintStart_toEndOf="@+id/fat_text"
            app:layout_constraintEnd_toStartOf="@+id/protein_text"
            />
        <TextView
            android:id="@+id/protein_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 330 g"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/cal_icon"
            app:layout_constraintBottom_toBottomOf="@+id/cal_icon"
            app:layout_constraintStart_toEndOf="@+id/protein_icon"
            app:layout_constraintEnd_toStartOf="@id/carb_icon"
            />

        <ImageView
            android:id="@+id/carb_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/carb"
            app:layout_constraintTop_toTopOf="@+id/cal_icon"
            app:layout_constraintBottom_toBottomOf="@+id/cal_icon"
            app:layout_constraintStart_toEndOf="@+id/protein_text"
            app:layout_constraintEnd_toStartOf="@+id/carb_text"
            />
        <TextView
            android:id="@+id/carb_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 460 g"
            android:textColor="@color/gray"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toTopOf="@+id/cal_icon"
            app:layout_constraintBottom_toBottomOf="@+id/cal_icon"
            app:layout_constraintStart_toEndOf="@+id/carb_icon"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>